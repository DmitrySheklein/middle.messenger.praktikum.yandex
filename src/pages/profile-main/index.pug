extends ../../layout/_main
append head
  title Профиль
  link(rel="stylesheet", href="/styles/profile.scss")
  link(rel="stylesheet", href="/styles/modal.scss")
block main-content
  .profile-container
    .profile-sidebar
      button.button.button--back(title='Назад')
        span.material-icons arrow_back          
    .profile-content
      .profile
        .profile__image.profile__image--editable
          span.profile__image-edit-text
            | Поменять
            br
            | аватар
          img(src='https://via.placeholder.com/150', alt)
        h1.profile__name Иван
        form.profile__form(action='#')
          .profile__inputs
            .profile__input-wrap
              label.profile__input-label Почта
              input.profile__input(type='mail', value='pochta@yandex.ru')
            .profile__input-wrap
              label.profile__input-label Логин
              input.profile__input(type='text', value='ivanivanov')
            .profile__input-wrap
              label.profile__input-label Имя
              input.profile__input(type='text', value='Иван')
            .profile__input-wrap
              label.profile__input-label Фамилия
              input.profile__input(type='text', value='Иванов')
            .profile__input-wrap
              label.profile__input-label Имя в чате
              input.profile__input(type='text', value='Иван')
            .profile__input-wrap
              label.profile__input-label Телефон
              input.profile__input(type='tel', value='+7 (909) 967 30 30')
        .profile__buttons
          button.profile__button Изменить данные
          button.profile__button Изменить пароль
          button.profile__button.profile__button--exit Выйти
  .modal
    .modal__overlay
    .modal__content
      h2.modal__title Загрузите файл
      .file
        label.file__label(for='file-input')
          span.file__label-text Выбрать файл
          br
          span.file__label-text на компьютере
        input#file-input.file__input(type='file')
      button.button.modal__button Поменять
      .modal__file-error Нужно выбрать файл          